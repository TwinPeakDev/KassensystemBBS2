@page "/counter"

<PageTitle>Counter</PageTitle>


<AuthorizeView>
    <Authorized>
        <h1>Counter</h1>
        
        <p role="status">Current count: @_currentCount</p>
        
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
        
        @code {
            private int _currentCount;
        
            private void IncrementCount()
            {
                _currentCount++;
            }
        
        }
    </Authorized>
    <NotAuthorized>
        <RadzenImage Path="https://i.kym-cdn.com/entries/icons/original/000/002/144/You_Shall_Not_Pass!_0-1_screenshot.jpg" />
    </NotAuthorized>
</AuthorizeView>

<RadzenSidebar @bind-Expanded="@sidebar2Expanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Click="PanelClick" Text="Home" Path="/" Icon="home" />
        <RadzenPanelMenuItem Click="PanelClick" Text="Produkte" Path="produkte" Icon="list" />
        <RadzenPanelMenuItem Click="PanelClick" Text="Verkaufen" Path="verkauf" Icon="add_shopping_cart" ></RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>

@code
{
    public bool sidebar2Expanded = true;

    public async Task PanelClick()
    {
        if(sidebar2Expanded) await Task.Delay(150);
        sidebar2Expanded = !sidebar2Expanded;
    }
    
}

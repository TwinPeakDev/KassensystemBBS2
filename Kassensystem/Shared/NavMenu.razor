<RadzenSidebar @bind-Expanded="@SidebarExpanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Click="PanelClick" Text="Home" Path="/" Icon="home" />
        <RadzenPanelMenuItem Click="PanelClick" Text="Produkte" Path="products" Icon="list" />
        <RadzenPanelMenuItem Click="PanelClick" Text="Verkaufen" Path="products/sell" Icon="add_shopping_cart" ></RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>

@code
{
    public bool SidebarExpanded { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        //TODO: Fix that side Menu opens on Startup. :( `´
    }

    public async Task PanelClick()
    {
        if(SidebarExpanded) await Task.Delay(150);
        SidebarExpanded = !SidebarExpanded;
    }
    
}

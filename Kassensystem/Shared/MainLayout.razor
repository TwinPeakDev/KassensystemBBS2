@inherits LayoutComponentBase

<PageTitle>Kassensystem</PageTitle>
<style>
    .rz-sidebar { border-right: 0 }
</style>


<RadzenLayout Style="background-color: var(--rz-base-200); grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader Style="background-color: var(--topbar-bg-color)">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@_navMenu.PanelClick" />
            <RadzenLabel Text="Kassensystem" />
        </RadzenStack>
    </RadzenHeader>
    <NavMenu @ref="_navMenu" />
    <RadzenBody Style="background-color: var(--rz-base-200);" >
        <div style="height: 100%;" class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>





@code {
    NavMenu _navMenu;
}